<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF8F5"
    tools:context=".fragment.FeedbackFragment">

    <LinearLayout
        android:id="@+id/ln1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <!-- Đây là RelativeLayout bên ngoài, chứa tất cả các thành phần trong giao diện -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp">

        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:text="Phản hồi"
            android:fontFamily="serif"
            android:textSize="25sp"
            android:textStyle="bold" />


        <EditText
            android:id="@+id/edt_ho_va_ten_feedback"
            android:layout_below="@+id/txtTitle"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/custom_edittext"
            android:hint="Họ và tên(*)"
            android:padding="15dp"
            />
        <EditText
            android:id="@+id/edt_sdt_feedback"
            android:layout_below="@+id/edt_ho_va_ten_feedback"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/custom_edittext"
            android:hint="Số điện thoại"
            android:padding="15dp"
            />
        <EditText
            android:id="@+id/edt_email_feedback"
            android:layout_below="@+id/edt_sdt_feedback"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/custom_edittext"
            android:hint="Email"
            android:padding="15dp"
            />
        <EditText
            android:id="@+id/edt_binh_luan"
            android:layout_below="@+id/edt_email_feedback"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/custom_edittext"
            android:hint="Bình luận(*)"
            android:gravity="start"
            android:padding="15dp"
            />

        <Button
            android:id="@+id/btnSend_feedback"
            android:layout_below="@+id/edt_binh_luan"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="25px"
            android:background="@drawable/custom_button"
            android:padding="30px"
            android:text="Gửi phản hồi"
            android:textColor="#000000"
            android:textSize="15dp"
            android:layout_marginLeft="80dp"
            app:backgroundTint="@null" />



    </RelativeLayout>
    </LinearLayout>

</LinearLayout>
