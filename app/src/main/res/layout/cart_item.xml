<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="30dp"
    android:layout_margin="5dp"
    android:padding="2dp"
    android:id="@+id/cartView"
    android:layout_gravity="end"
    android:layout_height="100dp">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">


        <ImageView
            android:id="@+id/imageViewProduct"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="fitCenter"
            android:src="@drawable/vans" />

        <TextView
            android:id="@+id/txtProductName"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/imageViewProduct"
            android:ellipsize="end"
            android:fontFamily="serif"
            android:maxLines="1"
            android:padding="3dp"
            android:text="Reebook M"
            android:textColor="#A05029"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtProductPrice"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtProductName"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/imageViewProduct"
            android:fontFamily="serif"
            android:padding="3dp"
            android:text="$80.00 "
            android:textColor="#A05029"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtProductPrice"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/imageViewProduct"
            android:fontFamily="serif"
            android:padding="3dp"
            android:text="Size: 38"
            android:textColor="#A05029"
            android:textSize="15sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/btnDelete"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignTop="@id/txtProductName"
            android:layout_toEndOf="@id/txtProductName"
            android:src="@drawable/remove" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="220dp"
            android:layout_marginTop="60dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btn_giam"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/minus" />

            <TextView
                android:id="@+id/tv_so_luong"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:gravity="bottom"
                android:padding="5dp"
                android:text="1" />

            <ImageView
                android:id="@+id/btn_tang"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/plus" />
        </LinearLayout>
        <CheckBox
            android:id="@+id/checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_toEndOf="@id/txtProductPrice"
            android:layout_alignTop="@id/txtProductPrice"
          />
    </RelativeLayout>


</androidx.cardview.widget.CardView>