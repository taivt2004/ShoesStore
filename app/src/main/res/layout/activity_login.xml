<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp"
    android:background="#F4D3BB"
    tools:context=".activity.LoginActivity">


    <ImageView
        android:layout_marginTop="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logoshop"
        android:layout_gravity="center">
    </ImageView>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/edtEmailAddress"
            android:layout_margin="25px"
            android:padding="35px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:hint="Email"
            android:background="@drawable/custom_edittext"/>
        <EditText
            android:id="@+id/edtPassword"
            android:layout_margin="25px"
            android:padding="35px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:inputType="textPassword"
            android:hint="Password"
            android:background="@drawable/custom_edittext"/>
        <Button
            android:id="@+id/btnLogin"
            android:layout_margin="25px"
            android:padding="30px"
            app:backgroundTint="@null"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:text="Login"
            android:textSize="15dp"
            android:background="@drawable/custom_button"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textColor="#504E4B"
                android:text="Bạn không có tài khoản? "/>
            <TextView
                android:id="@+id/txtSignup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="15dp"
                android:text="Đăng Kí"
                android:textColor="@color/black"
                /></LinearLayout>
        <TextView
            android:id="@+id/tv_quen_mat_khau"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="#504E4B"
            android:text="Quên mật khẩu? "/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_height="180dp">

            <Button
                android:id="@+id/btnLoginAdmin"
                android:padding="35px"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="9dp"
                android:layout_marginTop="35dp"
                app:backgroundTint="@null"
                android:layout_width="match_parent"
                android:layout_height="57dp"
                android:textColor="#504E4B"
                android:text="Đăng nhập với tài khoản admin"
                android:textSize="15dp"
                android:background="@drawable/custom_button2"/>

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/admin1"
                android:layout_marginLeft="285dp"
                android:layout_marginTop="-45dp"/></LinearLayout>

    </LinearLayout>

</LinearLayout>